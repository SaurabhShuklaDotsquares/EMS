@using EMS.Dto;
@using EMS.Web.Models.Others;
@model JobReferFriendDto
@{
    ViewBag.Title = "AddEdit";
    Layout = null;
}
<style>
    .clsSmallFont {
        font-size: xx-small;
    }
</style>

<div id="frm-referFriend-add-edit" class="cmxform" style="width:600px;height:100%;margin-top:10%">
    @using (Html.BeginForm("ReferFriend", "JobReference", FormMethod.Post, new { @id = "frm-referFriend", enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <div class="row bg-white">
            <div class="popup-top text-left">
                <h3 style="color:#fff;margin-top:15px;" class="text-center">Refer a friend for job</h3>

            </div>

            <div class="popup-container" id="popup-container">
                <div id="refer-friend-validation-summary"></div>
                <div class="form-horizontal">

                    @Html.HiddenFor(model => model.CurrentOpeningId)
                    <div class="form-group">
                        @Html.LabelFor(model => model.Name, new { @class = "col-md-3 col-sm-3 requiredasterisk" })
                        <div class="col-md-9">
                            @Html.TextBoxFor(model => model.Name,  null, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Email, new { @class = "col-md-3 col-sm-3 requiredasterisk" })
                        <div class="col-md-9">
                            @Html.TextBoxFor(model => model.Email,  null, new { @type = "email", @class = "form-control col-md-6 col-sm-6" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.MobileNo, new { @class = "col-md-3 col-sm-3 requiredasterisk" })
                        <div class="col-md-9">
                            @Html.TextBoxFor(model => model.MobileNo,  null, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Small_Desc, new { @class = "col-md-3 col-sm-3 requiredasterisk" })
                        <div class="col-md-9">
                            @Html.TextAreaFor(model => model.Small_Desc, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Attacchment, new { @class = "col-md-3 col-sm-3 requiredasterisk" })
                        <div class="col-md-9">
                            @Html.TextBoxFor(model => model.Attacchment, new { @type = "file" })
                        </div>
                    </div>
                </div>

                @Html.Partial("_ModalFooter", new ModalFooter() { SubmitButtonID = "btnSubmit-Job-refer" })

            </div>
        </div>
    }
</div>
