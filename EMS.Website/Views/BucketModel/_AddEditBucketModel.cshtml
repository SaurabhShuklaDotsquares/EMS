@model BucketModelDto
@using EMS.Web.Models.Others
@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.BucketId)
    @Html.Partial("_ModalHeader", new ModalHeader { Heading = "Business Model" })
    <div class="modal-body">
        <div id="validation-summary"></div>
        <div class="form-group  required">
            <div class="row">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.ModelName, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-md-9">
                    @Html.TextBoxFor(model => model.ModelName,  htmlAttributes: new { @class = "form-control", @placeholder = "Enter Bucket Model Name", @maxlength = 100, @autocomplete = "off" })
                </div>
            </div>
        </div>
        <div class="form-group  required">
            <div class="row">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.ModelCode, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-md-9">
                    @Html.TextBoxFor(model => model.ModelCode, htmlAttributes: new { @class = "form-control", @style = "text-transform:uppercase;", @placeholder = "Enter Bucket Model Name", @maxlength = 100, @autocomplete = "off" })
                </div>
            </div>
        </div>
        <div class="form-group ">
            <div class="row">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.IsActive, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-md-9">
                    @Html.CheckBoxFor(model => model.IsActive)
                </div>
            </div>
        </div>

    </div>
    @Html.Partial("_ModalFooter", new ModalFooter { })
}


