@model List<OrgImprovementDto>

@{await Html.RenderPartialAsync("_ModalHeader", new EMS.Web.Models.Others.ModalHeader { Heading = "Org Improvement Details" }); }

<div class="modal-body">
    @if (Model != null)
    {
        <table class="table table-stats">
            <thead>
                <tr>
                    <td style="width:5%">S.No.</td>
                    <td style="width:10%">Improvement ID</td>
                    <td style="width:30%">Title</td>
                    <td style="width:10%">Type</td>
                    <td style="width:40%">Description</td>
                    <td style="width:15%">Improvement Date</td>
                </tr>
            </thead>
            <tbody>
                @{
                    int index = 0;
                    foreach (var item in Model)
                    {
                <tr>
                    <td>@(++index)</td>
                    <td>@item.Id</td>
                    <td>@item.Title</td>
                    <td>@(((Enums.ImprovementType)item.TypeId).ToString())</td>
                    <td>@item.Description</td>
                    <td>@item.ImprovementDate</td>

                </tr>
                    }
                }
            </tbody>
        </table>
    }
    else
    {
        <span> No data found</span>
    }

</div>
