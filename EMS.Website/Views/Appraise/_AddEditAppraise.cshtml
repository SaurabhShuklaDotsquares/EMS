@using EMS.Web.Models.Others
@model AppraiseDto
@using (Html.BeginForm())
{
    @Html.Partial("_ModalHeader", new ModalHeader { Heading = "ADD/EDIT Appraise" })
    <div class="modal-body">
        <div id="validation-summary"></div>

        <div class="form-group clearfix">
            <div class="row">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.Employee, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-md-9">
                    @Html.DropDownListFor(model => model.EmployeeId, Model.Employee, "--Select Employee--", htmlAttributes: new { @class = "form-control" })
                </div>
            </div>
            <div class="row" style="padding-top:2%">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.Project, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-md-9">
                    @Html.DropDownListFor(model => model.ProjectId, ViewBag.ProjectList as IEnumerable<SelectListItem>, new { @class = "form-control" })
                </div>
            </div>
            <div class="row" style="padding-top:2%">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.Priority, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-md-9">
                    @Html.DropDownListFor(model => model.PriorityId, Model.Priority, htmlAttributes: new { @class = "form-control" })
                </div>
            </div>

        </div>
        <div class="form-group clearfix">
            <div class="row">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.AppraiseType, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-md-9">
                    @foreach (var item in Model.AppraiseListItem)
                    {
                        <input type="radio" name="AppraiseId" value="@item.Value" @(Convert.ToInt32(item.Value) == Model.AppraiseId ? "checked" : "") /> @item.Text
                    }
                </div>
            </div>
        </div>

        <div id="clientAppraise">

            <div class="form-group">
                <div class="row">
                    <div class="col-md-3">
                        @Html.LabelFor(model => model.ClientDate, htmlAttributes: new { @class = "control-label" })
                    </div>
                    <div class="col-md-9">
                        @Html.TextBoxFor(x => x.ClientDate, htmlAttributes: new { @class = "form-control", @id = "appraiseDate", @autocomplete = "off" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-md-3">
                        @Html.LabelFor(model => model.ClientComment, htmlAttributes: new { @class = "control-label" })
                    </div>
                    <div class="col-md-9">
                        @Html.TextAreaFor(x => x.ClientComment, 5, 10, htmlAttributes: new { @class = "form-control", @autocomplete = "off", @data_rule_required = "true", @data_msg_required = "*required" })
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.TlComment, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-md-9">
                    @Html.TextAreaFor(x => x.TlComment, 5, 10, htmlAttributes: new { @class = "form-control", @autocomplete = "off", @data_rule_required = "true", @data_msg_required = "*required" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-3">
                </div>
                <div class="col-md-9">
                    @Html.CheckBoxFor(m => m.SendEmail)
                    @Html.LabelFor(model => model.SendEmail, htmlAttributes: new { @class = "control-label" })
                </div>
            </div>
        </div>
    </div>
    @Html.Partial("_ModalFooter", new ModalFooter { })
}
