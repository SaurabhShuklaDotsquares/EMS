@using EMS.Web.Models.Others
@model List<CompanyDocumentDto>
@{Html.RenderPartial("_ModalHeader", new ModalHeader { Heading = "Revision History" }); }
<div class="modal-body">
    <table class="table table-stats">
        <thead>
            <tr>
                <th width="70%">
                    Document
                </th>
                <th width="30%">
                    Approved On
                </th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count > 0)
            {
                foreach (var doc in Model)
                {
                <tr>
                    <td>
                        @if (!string.IsNullOrEmpty(doc.DocumentPath))
                        {
                        <a target="_blank" title="Download - @doc.DocumentName" href="@doc.DocumentPath" class="ablue">
                            <i class="fa fa-download"></i> @doc.DocumentName
                        </a>
                        }
                        else
                        {
                        @doc.DocumentName
                        }
                    </td>
                    <td>
                        @doc.ApprovedOn
                    </td>
                </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="2" class="text-center">
                        No Document found
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@{Html.RenderPartial("_ModalFooter", new ModalFooter { OnlyCancelButton = true });}