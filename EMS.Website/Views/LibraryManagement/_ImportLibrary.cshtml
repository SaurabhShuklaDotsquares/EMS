        <div id="validation-summary"></div>
        <div class="form-group required" style="margin-bottom: 0px;">
            <div class="row">
                <div class="col-md-3">
                    <label for="LibraryExcelFile">Upload Excel File</label>
                </div>
                <div class="col-md-9">
                    <input style="float:left;" type="file" name="file" id="file" required />
                </div>
            </div>
            <div class="row" style="margin-top: 10px;">
                <div class="col-md-9">
                    <a href="SampleLibraryImport.xlsx" target="_blank" style="text-decoration: underline;color:#0235a9">Download Sample Excel File</a>
                </div>
            </div>
        </div>
    </div>
    @Html.Partial("_ModalFooter", new ModalFooter { })
}

