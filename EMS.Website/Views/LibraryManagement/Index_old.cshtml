                                <div class="form-group">
                                    @Html.DropDownList("layouts", Model.Layouts, null, new { @class = "form-control select2Layouts", @multiple = "multiple" })
                                </div>
                            </div>
                            <div class="technology">
                                <label class="technologyLabel">Technology</label>
                                <div class="form-group" id="techSelect">
                                    @Html.DropDownList("technologies", Model.Technologies, null, new { @class = "form-control select2Technologies", @multiple = "multiple" })
                                </div>
                            </div>
                            <div class="component">
                                <label class="componentLabel">Component</label>
                                <div class="form-group">
                                    @Html.DropDownList("components", Model.Components, null, new { @class = "form-control select2Components", @multiple = "multiple" })
                                </div>
                            </div>
