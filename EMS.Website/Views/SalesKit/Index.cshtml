@using EMS.Web.Models.Others
@using EMS.Core
@section styles{
    <link href="~/Content/css/toggle-switch.css" rel="stylesheet" />
}
<div class="main_content clearfix">
    <div class="full-wdth clearfix padding20">
        @Html.Partial("_Notification")
        <div class="saleskit-page full-wdth clearfix">
            <h2>Manage Sales Kit Type</h2>
            <div class="dis-block clearfix">
                <div class="pull-left box1">
                    <a data-toggle="modal" data-target="#modal-action-saleskit" href="@Url.Action("AddEdit", "SalesKit")" class="btn btn-custom pull-right btn-addSalesKit">Add New</a>
                </div>

                <div class="pull-right box2">
                    @using (Html.BeginForm())
                    {
                        <div class="wdth2 margin-right10 pull-left">
                            @Html.TextBox("txt_search", null, new { @class = "form-control", @placeholder = "Sales Kit Name", style = "width: 250px;" })

                        </div>

                        <button type="button" class="btn btn-custom pull-left" id="btn_search">Search</button>
                    }
                </div>

            </div>
            <br />
            <div class="box-body ">
                <section id="no-more-tables">
                    <table id="grid-saleskit" class="display postable table table-bordered table-condensed"></table>
                </section>
            </div>
        </div>
    </div>
</div>
@Html.Partial("_Modal", new Modal { ID = "modal-action-saleskit", AreaLabeledId = "modal-action-lblSalesKit", Size = Enums.ModalSize.Medium })
@section scripts{
    <script src="~/Scripts/CustomJS/saleskit.js" asp-append-version="true"></script>
}
