@model DomainTypeDto
@using EMS.Web.Models.Others
@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.DomainId)
    @Html.Partial("_ModalHeader", new ModalHeader { Heading = "Manage Domain" })
    <div class="modal-body">
        <div id="validation-summary"></div>
        <div class="form-group  required">
            <div class="row">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.DomainName, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-md-9">
                    @Html.TextBoxFor(model => model.DomainName, htmlAttributes: new { @class = "form-control", @placeholder = "Enter Domain Name", @maxlength = 100, @autocomplete = "off" })
                </div>
            </div>
        </div>
        <div class="form-group ">
            <div class="row">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.IsActive, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-md-9">
                    @Html.CheckBoxFor(model => model.IsActive)
                </div>
            </div>
        </div>

    </div>
    @Html.Partial("_ModalFooter", new ModalFooter { })
}


