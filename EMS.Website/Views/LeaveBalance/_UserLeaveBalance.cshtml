@model EMS.Dto.LeaveBalanceSummeryDto

@if (ViewBag.AttendenceId > 0)
{

<div class="modal-body">
    <div class="form-group">
        <div class="row">
            <div class="col-md-12">
                <p><h2>Available leave balance for @Html.DisplayFor(x => x.Name)</h2></p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <label class="col-md-4">@Enums.LeaveCategory.CasualLeave.GetEnumDescription()</label>
                <div class="col-md-2">@Html.DisplayFor(x => x.CurrentLeaveBalance.CasualLeave)</div>
                <label class="col-md-4">@Enums.LeaveCategory.EarnedLeave.GetEnumDescription()</label>
                <div class="col-md-2">@Html.DisplayFor(x => x.CurrentLeaveBalance.EarnedLeave)</div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <label class="col-md-4">@Enums.LeaveCategory.SickLeave.GetEnumDescription()</label>
                <div class="col-md-2">@Html.DisplayFor(x => x.CurrentLeaveBalance.SickLeave)</div>
                <label class="col-md-4">@Enums.LeaveCategory.WeddingLeave.GetEnumDescription()</label>
                <div class="col-md-2">@Html.DisplayFor(x => x.CurrentLeaveBalance.WeddingLeave)</div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <label class="col-md-4">@Enums.LeaveCategory.CompensatoryOff.GetEnumDescription()</label>
                <div class="col-md-2">@Html.DisplayFor(x => x.CurrentLeaveBalance.CompensatoryOff)</div>
                <label class="col-md-4">@Enums.LeaveCategory.BereavementLeave.GetEnumDescription()</label>
                <div class="col-md-2">@Html.DisplayFor(x => x.CurrentLeaveBalance.BereavementLeave)</div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                @if (Model.Gender.Equals("M"))
                    {
                <label class="col-md-4">@Enums.LeaveCategory.PaternityLeave.GetEnumDescription()</label>
                <div class="col-md-2">@Html.DisplayFor(x => x.CurrentLeaveBalance.PaternityLeave)</div>
                    }
                @if (Model.Gender.Equals("F"))
                    {
                <label class="col-md-4">@Enums.LeaveCategory.MaternityLeave.GetEnumDescription()</label>
                <div class="col-md-2">@Html.DisplayFor(x => x.CurrentLeaveBalance.MaternityLeave)</div>
                    }
            </div>
        </div>
        <br /><br />
        <p class="note-box error">Note: This Available leave balance may differ from dashboard as it's included pending leaves as well.</p>

    </div>
</div>
<div class="modal-footer">
    <button data-dismiss="modal" id="Close" class="btn btn-custom pull-right" type="button">Close</button>
</div>
}
else
{
<div class="modal-body">
    <h2>
        Your Attendance Id is missing. please contact HR for update your attendance ID in EMS.
    </h2>
</div>
<div class="modal-footer">
    <button data-dismiss="modal" id="Close" class="btn btn-custom pull-right" type="button">Close</button>
</div>
}
