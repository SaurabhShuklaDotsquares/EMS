@using EMS.Web.Models.Others
@model ReturnDeviceDto
    
    @using (Html.BeginForm())
    {
        Html.RenderPartial("_ModalHeader", new ModalHeader { Heading = "Receive Device" });
        <div class="modal-body">
            <div id="MessageDiv"></div>
            @Html.HiddenFor(model => model.DeviceDetailId)
            @Html.HiddenFor(model => model.AssignedDate)

            <div class="form-group required clearfix">
                <div class="row">
                    <div class="col-md-3">
                        @Html.LabelFor(model => model.ReturnToUid, htmlAttributes: new { @class = "control-label" })
                    </div>
                    <div class="col-md-9">
                        @Html.DropDownListFor(model => model.ReturnToUid, Model.ReturnedUserList, "Select", htmlAttributes: new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="form-group required clearfix">
                <div class="row">
                    <div class="col-md-3">
                        @Html.LabelFor(model => model.ReturnDate, htmlAttributes: new { @class = "control-label" })
                    </div>
                    <div class="col-md-9">
                        @Html.TextBoxFor(model => model.ReturnDate, htmlAttributes: new { @class = "form-control", @placeholder = "dd/mm/yyyy", @autoComplete = "off", @readonly = "readonly" })
                    </div>
                </div>
            </div>
           
        </div>
        Html.RenderPartial("_ModalFooter", new ModalFooter());
    }