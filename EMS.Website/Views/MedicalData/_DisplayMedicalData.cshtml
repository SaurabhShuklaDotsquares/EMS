@using EMS.Web.Models.Others
@model EMS.Dto.MedicalDataDto

@if (Model != null)
{
    <div class="ManageDepartment-page full-wdth clearfix">
        <div id="frm-leave-detail">
            <div class="modal-body form-horizontal fontsize12 clearfix padding20">
                <div class="row">
                    <div class="col-md-12">
                        <div class="col-md-6">
                            <h2>Medical Data</h2>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form_row br_bule2">
                            <label class="col-md-3">Name : </label>
                            <div class="col-md-3">
                                @Html.DisplayFor(model => model.Name)
                            </div>
                        </div>
                        <div class="form_row br_bule2">
                            <label class="col-md-3">Employee Code : </label>
                            <div class="col-md-3">
                                @Html.DisplayFor(model => model.EmployeeCode)
                            </div>
                        </div>
                        <div class="form_row br_bule2">
                            <label class="col-md-3">Designation : </label>
                            <div class="col-md-3">
                                @Html.DisplayFor(model => model.Designation)
                            </div>
                        </div>
                        <div class="form_row br_bule2">
                            <label class="col-md-3">Date Of Birth : </label>
                            <div class="col-md-3">
                                @Html.DisplayFor(model => model.DOB)
                            </div>
                        </div>
                    </div>
                </div>
                @if (Model.Relatives != null && Model.Relatives.Count > 0)
                {
                    <div class="row">
                        <div class="col-md-12 margin-top20">
                            <h2>Relatives Data</h2>
                        </div>
                    </div>
                    foreach (var rel in Model.Relatives)
                    {
                        <div class="row">
                            <div class="col-md-12">
                                <div class="clearfix">
                                    <div class="form_row br_bule2">
                                        <label class="col-md-3">Name : </label>
                                        <div class="col-md-3">
                                            @Html.DisplayFor(model => rel.Name)
                                        </div>
                                    </div>
                                    <div class="form_row br_bule2">
                                        <label class="col-md-3">Relation : </label>
                                        <div class="col-md-3">
                                            @((EMS.Core.Enums.RelationType)rel.Relation)
                                        </div>
                                    </div>
                                    <div class="form_row br_bule2">
                                        <label class="col-md-3">Date Of Birth : </label>
                                        <div class="col-md-3">
                                            @Html.DisplayFor(model => rel.DOB)
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br />
                    }
                }
                <div class="modal-footer" style="clear:both;">
                    <button data-dismiss="modal" id="Close" class="btn btn-custom pull-right" type="button">Close</button>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div>
        No Data Found!
    </div>
}