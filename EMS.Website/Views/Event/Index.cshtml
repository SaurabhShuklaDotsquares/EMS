@using EMS.Core
@using EMS.Web.Models.Others
@{
    ViewBag.Title = "Manage Event";
}
@section styles{
    <link href="~/Content/css/toggle-switch.css" rel="stylesheet" />
}

<div class="main_content">
    <div class="full-wdth padding20">
        @{ Html.RenderPartial("_Notification"); }
        <div id="MessageDiv"></div>
        <div class="row">
            <div class="col-sm-4">
                <h2>Manage Events</h2>
            </div>
            @if (CurrentUser.RoleId == (int)Enums.UserRoles.UKBDM)
            {
                <div class="col-sm-8 text-right">
                    <a class="btn btn-custom" href="@Url.Action("add")">Add New</a>
                </div>
            }
        </div>
        <table id="grid-event-table" class="display postable table table-stats table-condensed"></table>
    </div>
</div>
<div class="divoverlay hide"></div>
@{
    Html.RenderPartial("_Modal", new Modal { ID = "modal-delete-event", AreaLabeledId = "lbl-delete-event", Size = Enums.ModalSize.Medium });
    Html.RenderPartial("_Modal", new Modal { ID = "modal-add-edit-event", AreaLabeledId = "modal-add-edit-event-label", Size = Enums.ModalSize.Large });
}

@section scripts{
    <script src="~/Scripts/CustomJS/Event/index.js" asp-append-version="true"></script>


}

